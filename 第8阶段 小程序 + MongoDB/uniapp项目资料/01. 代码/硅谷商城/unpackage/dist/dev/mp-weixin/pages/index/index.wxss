#indexContainer {
  width: 100%;
  height: 100%;
}
#indexContainer .header-search-login {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  height: 60rpx;
  padding: 10rpx 0;
}
#indexContainer .header-search-login .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 30rpx;
}
#indexContainer .header-search-login .searchInput {
  height: 60rpx;
  width: 420rpx;
  background: #ededed;
  position: relative;
  border-radius: 10rpx;
}
#indexContainer .header-search-login .searchInput .iconfont {
  font-size: 30rpx;
  position: absolute;
  left: 10rpx;
  top: 25%;
}
#indexContainer .header-search-login .searchInput input {
  border-radius: 10rpx;
  height: 60rpx;
  width: 370rpx;
  margin-left: 50rpx;
}
#indexContainer .header-search-login .searchInput .placeholder {
  font-size: 24rpx;
  color: #666;
}
#indexContainer .header-search-login button {
  width: 144rpx;
  height: 60rpx;
  padding: 0 4rpx;
  color: #b4282d;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  margin: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
}
#indexContainer .navContainer {
  width: 100%;
  white-space: nowrap;
  height: 80rpx;
}
#indexContainer .navContainer .navItem {
  display: inline-block;
  width: 140rpx;
  height: 100%;
  margin: 0 10rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}
#indexContainer .navContainer .navItem.activeClass:after {
  content: '';
  height: 1rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #bb2c08;
}
#indexContainer .indexContent {
  height: calc(100vh - 160rpx);
}

