  content: '';
  height: 70%;
  width: 2rpx;
  background: #b4282d;
  position: absolute;
  top: 15%;
  left: 6rpx;
}
.categoryContainer .contentContainer .rightContainer {
  width: 80%;
  height: 100%;
}
.categoryContainer .contentContainer .rightContainer .scrollContainer {
  height: 100%;
