      -ms-flex-direction: column;
          flex-direction: column;
}
.categoryContainer .contentContainer .rightContainer .proList .proItem image {
  width: 90%;
  height: 144rpx;
}
.categoryContainer .contentContainer .rightContainer .proList .proItem ._p {
  font-size: 24rpx;
  text-align: center;
}

